<Window x:Class="Lab6_7_New.Selection.SelectByType"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Lab6_7_New.Selection"
        mc:Ignorable="d"
        Title="SelectByType" Height="196.992" Width="183.817">
    <Grid>
        <TextBlock HorizontalAlignment="Left" Margin="30,30,0,0" TextWrapping="Wrap" Text="{DynamicResource CB_Type}" VerticalAlignment="Top" RenderTransformOrigin="1.1,6.312"/>
        <RadioButton x:Name="TypeBook" Content="{DynamicResource CB_TypeBook}" HorizontalAlignment="Left" Margin="26,54,0,0" VerticalAlignment="Top"/>
        <RadioButton x:Name="TypeMagazine" Content="{DynamicResource CB_TypeMagazine}" HorizontalAlignment="Left" Margin="26,74,0,0" VerticalAlignment="Top"/>
        <RadioButton x:Name="TypeStudentBook" Content="{DynamicResource CB_TypeStudentBook}" HorizontalAlignment="Left" Margin="26,94,0,0" VerticalAlignment="Top"/>
        <Button Content="{DynamicResource SearchButton}" HorizontalAlignment="Left" Margin="46,126,0,0" VerticalAlignment="Top" Width="75" Click="Find"/>

    </Grid>
</Window>
